<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="5" prefHeight="400.0" prefWidth="800.0" vgap="5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sharebook.controllers.InitialViewController">

    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="60" />
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Main actions content -->
    <BorderPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <center>
            <ScrollPane fx:id="mainScrollPane" styleClass="no-background" fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER" />
        </center>
        <bottom>
            <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
                <Button fx:id="toggleLoginRegister" alignment="CENTER" minWidth="200" onAction="#onToggleLoginRegister" styleClass="link-button" />

                <ComboBox fx:id="langComboBox" minWidth="150" onAction="#onChangeLanguage" />

                <BorderPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>
        <GridPane.margin>
            <Insets bottom="20" left="20" right="20" top="20" />
        </GridPane.margin>
    </BorderPane>

    <!-- ShareBook explanation -->
    <GridPane alignment="CENTER" hgap="10" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
        <Text fx:id="whatIsSB" styleClass="text-white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextFlow GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Text fx:id="whatIsSBDesc" styleClass="text-white" />
        </TextFlow>

        <Text styleClass="text-white" text="¿Que es SHAREBOOK?" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextFlow GridPane.columnIndex="0" GridPane.rowIndex="5">
            <Text styleClass="text-white" text="SHAREBOOK es una plataforma en la que los usuarios pueden compartir reseñas de libros de distintas categoras con otros usuarios con el fin de promover el habito de la lectura de manera exponencial." />
        </TextFlow>

        <GridPane.margin>
            <Insets bottom="10" left="10" right="10" top="5" />
        </GridPane.margin>
        <rowConstraints>
            <RowConstraints /> <!-- Title -->
            <RowConstraints /> <!-- Content -->
            <RowConstraints /> <!-- Content -->
            <RowConstraints percentHeight="20" /> <!-- Space -->
            <RowConstraints /> <!-- Title -->
            <RowConstraints /> <!-- Content -->
            <RowConstraints /> <!-- Content -->
        </rowConstraints>
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
    </GridPane>

    <stylesheets>
        <URL value="@../css/general.css" />
<!--        <URL value=""/>-->
    </stylesheets>
</GridPane>
